{
    "parser":  "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends":  ["plugin:@typescript-eslint/recommended"],
    "parserOptions":  {
      "ecmaVersion":  2018,
      "sourceType":  "module"
    },
    "rules":  {
      "max-len": ["error", { "code": 120 }]
    },
    "overrides": [
      {
        "files": ["*.js"],
        "rules": {
          "@typescript-eslint/no-var-requires": "off"
        }
      }
  ]
}
