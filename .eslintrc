{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended"
    ],
    "env": {
        "jest/globals": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "max-len": [1, 120, 2, {"ignoreComments": true}],
        "indent": ["error", 4],
        "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "comma-dangle": ["warn", "always-multiline"],
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"],
        "no-console": "warn"
    },
}
