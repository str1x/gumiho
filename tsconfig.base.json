{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths": {
            "@src/*": ["src/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
